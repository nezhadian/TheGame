                            <li class="nav-item">
                                <NavLink class="nav-link" href="leaderboard">Leaderboard</NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link" href="army">MyArmy</NavLink>
                            </li>
                        </ul>
                    </div>
                </div>
            </Authorized>
        </Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
        
    </div>
